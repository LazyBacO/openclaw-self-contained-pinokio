{
  "run": [
    {
      "method": "shell.run",
      "params": {
        "message": [
          "npm i -g clawdbot",
          "clawdbot onboard --flow quickstart --non-interactive --skip-skills --accept-risk"
        ],
        "on": [{
          "event": "/Error:.*gateway.*closed/i", "break": false
        }]
      }
    }
  ]
}