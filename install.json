{
  "daemon": true,
  "run": [
    {
      "method": "shell.run",
      "params": {
        "message": "npm i -g clawdbot@latest"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "input": true,
        "message": "clawdbot onboard",
        "on": [{
          "event": "/.*onboarding complete.*/i",
          "kill": true
        }]
      }
    }
  ]
}
